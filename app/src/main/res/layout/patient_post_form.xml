        android:background="@color/bluish"
        android:visibility="gone"/>

    <TextView
      android:id="@+id/doctor_psychiatrist"
      android:layout_width="match_parent"
      android:layout_height="30dp"
      android:text="@string/psychiatrist"
      android:visibility="gone"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bluish"
        android:visibility="gone"/>

    <TextView
      android:id="@+id/doctor_rheumatologist"
      android:layout_width="match_parent"
      android:layout_height="30dp"
      android:text="@string/rheumatologist"
      android:visibility="gone"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bluish"
        android:visibility="gone"/>

    <TextView
      android:id="@+id/doctor_urologist"
      android:layout_width="match_parent"
      android:layout_height="30dp"
      android:text="@string/urologist"
      android:visibility="gone"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bluish"
        android:visibility="gone"/>

    <TextView
      android:id="@+id/doctor_gastroenterologist"
      android:layout_width="match_parent"
      android:layout_height="30dp"
      android:text="@string/gastroenterologist"
