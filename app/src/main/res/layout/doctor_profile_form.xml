<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context="com.example.murodjonrahimov.wecare.DoctorProfileForm">

    <TextView
      android:id="@+id/first_name"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="@string/first_name"/>

    <TextView
      android:id="@+id/last_name"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="@string/last_name"/>


    <EditText
      android:id="@+id/country"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="@string/country_of_work"/>

    <EditText
      android:id="@+id/major"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="@string/major_speciality"/>

    <EditText
      android:id="@+id/years_of_experience"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="@string/years_of_experience"/>

    <!--Do not change to EditText!!!!-->
    <TextView
      android:id="@+id/edit_text_type"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="@string/doctor"/>
    <!--Do not change to EditText!!!!-->

    <Button
      android:id="@+id/save_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/save"/>

</LinearLayout>