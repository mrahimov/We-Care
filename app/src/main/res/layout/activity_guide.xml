<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:background="@drawable/doctors"
  tools:context="com.example.murodjonrahimov.wecare.guide.GuideActivity">


    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dip"
      android:layout_weight="1"
      android:gravity="center|bottom"
      android:orientation="horizontal">

        <Button
          android:id="@+id/button_guide_doctor"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:background="@color/guide_color"
          android:layout_marginRight="1dp"
          android:text="@string/guide_for_doctors"/>

        <Button
          android:id="@+id/button_guide_patient"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:layout_marginLeft="1dp"
          android:background="@color/guide_color"
          android:text="@string/guide_for_patient"/>


    </LinearLayout>

</LinearLayout>
