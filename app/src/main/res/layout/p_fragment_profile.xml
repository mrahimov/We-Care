<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/graylight"
  android:orientation="vertical"
  tools:context="com.example.murodjonrahimov.wecare.fragments.PatientProfileFragment">

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="150dp"
      tools:context="com.example.murodjonrahimov.wecare.fragments.PatientProfileFragment">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="120dp"
          android:background="@drawable/gradientbackground"
          android:orientation="vertical"
          tools:context="com.example.murodjonrahimov.wecare.fragments.PatientProfileFragment">

            <ImageView
              android:id="@+id/imageview_doctor_profile"
              android:layout_width="wrap_content"
              android:layout_height="100dp"
              android:layout_gravity="center_horizontal"
              android:layout_marginTop="5dp"
              android:src="@drawable/man"/>


        </LinearLayout>

        <android.support.v7.widget.CardView
          android:layout_width="325dp"
          android:layout_height="80dp"
          android:layout_centerHorizontal="true"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
          android:layout_marginTop="90dp"
          tools:context="com.example.murodjonrahimov.wecare.fragments.PatientProfileFragment">

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:weightSum="2"
              tools:context="com.example.murodjonrahimov.wecare.fragments.PatientProfileFragment">

               <LinearLayout
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:gravity="center"
                  android:orientation="vertical">

                    <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="First Name"
                      android:textSize="16sp"/>

                    <TextView
                      android:id="@+id/first_name"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:paddingTop="10dp"
                      android:text="*"
                      android:textColor="@color/startblue"
                      android:textSize="20sp"
                      android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:gravity="center"
                  android:orientation="vertical"
                  tools:context="com.example.murodjonrahimov.wecare.fragments.PatientProfileFragment">

                    <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Last Name"
                      android:textSize="16sp"/>

                    <TextView
                      android:id="@+id/last_name"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:paddingTop="10dp"
                      android:text="*"
                      android:textColor="@color/startblue"
                      android:textSize="20sp"
                      android:textStyle="bold"/>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <LinearLayout
      android:layout_width="360dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginTop="15dp"
      android:orientation="vertical"
      tools:context="com.example.murodjonrahimov.wecare.fragments.PatientProfileFragment">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:paddingLeft="25dp"
            android:layout_gravity="center"
          tools:context="com.example.murodjonrahimov.wecare.fragments.PatientProfileFragment">

            <ImageView
              android:layout_width="30dp"
              android:layout_height="30dp"
              android:src="@drawable/username"/>

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_vertical"
              android:paddingLeft="20dp"
              android:text="User Name"/>

            <TextView
              android:id="@+id/user_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_vertical"
              android:layout_marginLeft="5dp"
              android:hint="User Name"
              android:paddingLeft="20dp"
              android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"

          android:layout_marginTop="25dp"
          android:orientation="horizontal"
          android:paddingLeft="25dp"
          tools:context="com.example.murodjonrahimov.wecare.fragments.PatientProfileFragment">

            <ImageView
              android:layout_width="30dp"
              android:layout_height="30dp"
              android:src="@drawable/country"/>

            <TextView
              android:id="@+id/county_origin"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_vertical"
              android:paddingLeft="20dp"
              android:text="@string/country"/>

            <TextView
              android:id="@+id/country"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_vertical"
              android:layout_marginLeft="25dp"
              android:hint="Country"
              android:paddingLeft="20dp"
              android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"

          android:layout_marginTop="25dp"
          android:orientation="horizontal"
          android:paddingLeft="25dp">

            <ImageView
              android:layout_width="30dp"
              android:layout_height="30dp"
              android:src="@drawable/dob"/>

            <TextView
              android:id="@+id/birth"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_vertical"
              android:paddingLeft="20dp"
              android:text="Date of Birth"/>

            <TextView
              android:id="@+id/dob"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_vertical"
              android:hint="Date of Birth"
              android:paddingLeft="20dp"
              android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"

          android:layout_marginTop="25dp"
          android:orientation="horizontal"
          android:paddingLeft="25dp"
          tools:context="com.example.murodjonrahimov.wecare.fragments.PatientProfileFragment">

            <ImageView
              android:layout_width="33dp"
              android:layout_height="33dp"
              android:src="@drawable/scale"/>

            <TextView
              android:id="@+id/wight"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_vertical"
              android:paddingLeft="20dp"
              android:text="Weight"/>

            <TextView
              android:id="@+id/weight"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"

              android:layout_gravity="center_vertical"
              android:layout_marginLeft="32dp"
              android:hint="Weight"
              android:paddingLeft="20dp"
              android:textStyle="bold"/>


        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="25dp"
          android:orientation="horizontal"
          android:paddingLeft="25dp">

            <ImageView
              android:layout_width="30dp"
              android:layout_height="30dp"
              android:src="@drawable/gender"/>

            <TextView
              android:id="@+id/genr"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_vertical"
              android:paddingLeft="20dp"
              android:text="Gender"/>

            <TextView
              android:id="@+id/gender"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_vertical"
              android:layout_marginLeft="30dp"
              android:hint="Gender"
              android:paddingLeft="20dp"
              android:textStyle="bold"/>


        </LinearLayout>

        <Button
          android:id="@+id/add_fab"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:layout_gravity="center_horizontal"
          android:layout_marginTop="10dp"
          android:layout_marginVertical="40dp"
          android:background="@drawable/buttonstyle"
          android:text="Edit Profile"
          android:textColor="#fff"/>
    </LinearLayout>


    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      tools:context="com.example.murodjonrahimov.wecare.fragments.PatientProfileFragment">

        <android.support.design.widget.FloatingActionButton
          android:id="@+id/button_patient_image"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"
          android:layout_alignParentEnd="true"
          android:layout_gravity="end|bottom"
          android:clickable="true"
          android:focusable="true"
          android:src="@drawable/ic_photo_camera"
          android:visibility="gone"
          app:fabSize="normal"/>

    </RelativeLayout>

</LinearLayout>
